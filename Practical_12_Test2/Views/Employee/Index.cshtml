@model List<Practical_12_Test2.Models.Employee>

@{
    ViewBag.Title = "Employee Operations";
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="container mt-4">

    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Employee Operations</h2>
        <p class="text-muted">Select an operation or view all employees below</p>
    </div>

    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">
                    Available Operations
                </div>
                <ul class="list-group list-group-flush">

                    <li class="list-group-item">
                        @Html.ActionLink("Insert Records", "AddTestingRecords", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("Total Salary of All Employees", "TotalSalary", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("Employees Born Before 01-01-2000", "EmployeesBornBefore2000", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("Employees with Middle Name NULL", "CountMiddleNameNull", "Employee")
                    </li>

                </ul>
            </div>
        </div>
    </div>


    <!-- EMPLOYEE TABLE -->
    <h3 class="text-center text-success mb-3">Employees</h3>

    @if (Model != null && Model.Count > 0)
    {
        <div class="card shadow-sm mb-4">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>First Name</th>
                            <th>Middle Name</th>
                            <th>Last Name</th>
                            <th>DOB</th>
                            <th>Mobile</th>
                            <th>Address</th>
                            <th>Salary</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td>@emp.Id</td>
                                <td>@emp.FirstName</td>
                                <td>@(string.IsNullOrEmpty(emp.MiddleName) ? "N/A" : emp.MiddleName)</td>
                                <td>@emp.LastName</td>
                                <td>@emp.DOB.ToString("dd-MM-yyyy")</td>
                                <td>@emp.MobileNumber</td>
                                <td>@(string.IsNullOrEmpty(emp.Address) ? "Null" : emp.Address)</td>
                                <td>@emp.Salary</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">No employees found.</div>
    }


    <!-- SUMMARY SECTION -->
    @if (ViewBag.TotalSalary != null)
    {
        <div class="alert alert-info fw-bold text-center">
            Total Salary of All Employees:
            <span class="text-primary">@ViewBag.TotalSalary</span>
        </div>
    }

    @if (ViewBag.EmpCount != null)
    {
        <div class="alert alert-warning fw-bold text-center">
            Employees with Middle Name NULL:
            <span class="text-danger">@ViewBag.EmpCount</span>
        </div>
    }

</div>
