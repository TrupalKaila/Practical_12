@{
    ViewBag.Title = "Add Designation";
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="container mt-4">

    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Add New Designation</h2>
        <p class="text-muted">Enter a designation name and save it</p>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white fw-bold">
            Designation Details
        </div>

        <div class="card-body">

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            <form method="post" action="/Employee/AddDesignation">

                <div class="mb-3">
                    <label class="form-label fw-bold">Designation Name</label>
                    <input type="text" name="designationName" class="form-control" placeholder="Enter designation name" />
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">Add Designation</button>
                </div>

            </form>


        </div>
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("⬅ Go Back", "Index", null, new { @class = "btn btn-secondary px-4" })
    </div>

</div>
