@model IEnumerable<Practical_12_Test3.Models.DesignationEmployeeCount>

@{
    ViewBag.Title = "CountRecordsByDesignation";
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="container mt-4">

    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Number of Employees by Designation</h2>
        <p class="text-muted">Showing how many employees belong to each designation</p>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white fw-bold rounded-top">
            Designation Count Summary
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Designation Name</th>
                        <th>Total Employees</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.DesignationName</td>
                            <td>
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    @item.EmployeeCount
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("⬅ Go Back", "Index", null, new { @class = "btn btn-secondary px-4 py-2" })
    </div>

</div>
