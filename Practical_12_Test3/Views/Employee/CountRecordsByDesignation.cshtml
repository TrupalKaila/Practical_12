@model IEnumerable<Practical_12_Test3.Models.DesignationEmployeeCount>

@{
    ViewBag.Title = "CountRecordsByDesignation";
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="container mt-4">

    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Number of Employees by Designation</h2>
        <p class="text-muted">Showing how many employees belong to each designation</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white fw-bold">
            Designation Count Summary
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.DesignationName)</th>
                        <th>@Html.DisplayNameFor(model => model.EmployeeCount)</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DesignationName</td>
                            <td>@item.EmployeeCount</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("⬅ Go Back", "Index", null, new { @class = "btn btn-secondary px-4" })
    </div>

</div>
