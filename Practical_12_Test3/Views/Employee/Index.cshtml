@model List<Practical_12_Test3.Models.EmployeeDetailsView>

@{
    ViewBag.Title = "Employee Operations - Main Menu";
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="container mt-4">

    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Employee Operations</h2>
        <p class="text-muted">Choose an operation to proceed</p>
    </div>

    <!-- Operations Menu -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">
                    Menu
                </div>
                <ul class="list-group list-group-flush">

                    <li class="list-group-item">
                        @Html.ActionLink("1. Count Records by Designation", "CountRecordsByDesignation", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("2. Display Employee Details (First, Middle, Last, Designation)", "EmployeeDetails", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("3. View Employee Details Using DB View", "EmployeeDetailsView", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("4. Add New Designation", "AddDesignation", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("5. Add New Employee", "AddEmployee", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("6. Designations Having More Than 1 Employee", "CountEmployeeByDesignationGreaterThanOne", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("7. Employees Ordered By DOB (Via Stored Procedure)", "GetEmployeeDetailsOrderByDOB", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("8. Get Employees By Designation (Order by First Name)", "GetEmployeeDetailsOrderByFirstName", "Employee")
                    </li>

                    <li class="list-group-item">
                        @Html.ActionLink("9. Employee(s) Having Maximum Salary", "GetEmployeeWithMaximumSalary", "Employee")
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <hr />

    <!-- Employees List -->
    <h3 class="text-center text-success mb-3">All Employees</h3>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Designation</th>
                        <th>DOB</th>
                        <th>Mobile</th>
                        <th>Address</th>
                        <th>Salary</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.Id</td>
                            <td>@emp.FirstName @emp.MiddleName @emp.LastName</td>
                            <td>@emp.DesignationName</td>
                            <td>@emp.DOB.ToString("dd-MM-yyyy")</td>
                            <td>@emp.MobileNumber</td>

                            <td>
                                @(emp.Address.IsEmpty() ? "N/A" : emp.Address)
                            </td>

                            <td>@emp.Salary</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No employee records found.
        </div>
    }

</div>
